<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MoviePageActivity">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:baselineAligned="false"
        android:background="@color/colorPrimary"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/comingSoonTextView"
            android:textColor="@color/colorText"
            android:gravity="center"
            android:text="即将上映"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/hotMovieTextView"
            android:textColor="@color/colorText"
            android:gravity="center"
            android:text="热评电影"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/youLoveTextView"
            android:textColor="@color/colorText"
            android:gravity="center"
            android:text="猜你喜欢"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:id="@+id/toolLineImageView"
        android:contentDescription="tab"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/tab_selected_pressed_holo"
        />
    <View
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/moviePageViewPager"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
    </android.support.v4.view.ViewPager>
</LinearLayout>
